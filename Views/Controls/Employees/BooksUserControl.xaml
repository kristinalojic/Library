<UserControl x:Class="Library.Views.Controls.Employees.BooksUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:Library.Views.Controls.Employees"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0"
                  Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
                <materialDesign:PackIcon Style="{StaticResource SearchIcon}" />
                <TextBox  Grid.Column="1"
                          materialDesign:HintAssist.Hint="Pretrazi"
                          Style="{StaticResource SearchTextBox}" />
                <Button Grid.Column="3"
                        Command="{Binding AddEmployeeCommand}"
                        Style="{StaticResource UserControlButton}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Add"
                                                     Style="{StaticResource UserControlButtonIcon}" />
                            <TextBlock Text="Chech out" />
                        </StackPanel>
                    </Button.Content>
                </Button>
            <Button Grid.Column="4"
                    Command="{Binding AddEmployeeCommand}"
                    Style="{StaticResource UserControlButton}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="EyeOutline"
                                                 Style="{StaticResource UserControlButtonIcon}" />
                        <TextBlock Text="View loans" />
                    </StackPanel>
                </Button.Content>
            </Button>
        </Grid>
            <DataGrid Grid.Row="1"
                      ItemsSource="{Binding ActiveEmployees}"
                      AutoGenerateColumns="False"
                      Margin="10" />
    </Grid>
</UserControl>
