<UserControl x:Class="Library.Views.Controls.Employees.UsersUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Library.Views.Controls.Employees"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="900">
    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <materialDesign:PackIcon Style="{StaticResource SearchIcon}" />
            <TextBox  Grid.Column="1"
                      materialDesign:HintAssist.Hint="Pretrazi"
                      Style="{StaticResource SearchTextBox}" />
            <Button Grid.Column="3"
                    Command="{Binding AddMemberCommand}"
                    Style="{StaticResource UserControlButton}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="Add"
                                                 Style="{StaticResource UserControlButtonIcon}" />
                        <TextBlock Text="Add member" />
                    </StackPanel>
                </Button.Content>
            </Button>
            <Button Grid.Column="4"
                    Command="{Binding AddEmployeeCommand}"
                    Style="{StaticResource UserControlButton}">
                <Button.Content>
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="EyeOutline"
                                                 Style="{StaticResource UserControlButtonIcon}" />
                        <TextBlock Text="Details" />
                    </StackPanel>
                </Button.Content>
            </Button>
        </Grid>
        <Grid Grid.Row="1"
              Margin="0,20,0,0">
            <ContentControl>
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="Content">
                            <Setter.Value>
                                <DataGrid ItemsSource="{Binding Members}"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Auto"
                                          FontSize="14">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Card number"
                                                            Binding="{Binding MembershipCardNumber}"
                                                            IsReadOnly="True" />
                                        <DataGridTextColumn Header="Name"
                                                            Binding="{Binding Name}"
                                                            IsReadOnly="True" />
                                        <DataGridTextColumn Header="Surname"
                                                            Binding="{Binding Surname}"
                                                            IsReadOnly="True" />
                                        <DataGridTextColumn Header="Email"
                                                            Binding="{Binding Email}"
                                                            IsReadOnly="True" />
                                        <DataGridTextColumn Header="Phone"
                                                            Binding="{Binding Phone}"
                                                            IsReadOnly="True" />
                                        <DataGridTextColumn Header="Address"
                                                            Binding="{Binding Address}"
                                                            IsReadOnly="True" />
                                        <DataGridTextColumn Header="Membership expiration"
                                                            Binding="{Binding MembershipFee.Expiration, StringFormat='dd.MM.yyyy'}"
                                                            IsReadOnly="True" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding AvailableBooksCount}"
                                         Value="0">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <TextBlock Text="No data"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontSize="26"
                                                   Foreground="{DynamicResource MaterialDesignBody}" />
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Grid>
    </Grid>
</UserControl>
