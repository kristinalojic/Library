<UserControl x:Class="Library.Views.Controls.Admin.EmployeesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Views.Controls.Admin"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <TabControl materialDesign:ColorZoneAssist.Mode="SecondaryLight">
            <TabItem Header="Active employees">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0"
                          Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Style="{StaticResource SearchIcon}" />
                        <TextBox  Grid.Column="1"
                                  materialDesign:HintAssist.Hint="Pretrazi"
                                  Style="{StaticResource SearchTextBox}"/>
                        <Button Grid.Column="3"
                                Command="{Binding AddEmployeeCommand}"
                                Style="{StaticResource UserControlButton}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Add"
                                                             Style="{StaticResource UserControlButtonIcon}" />
                                    <TextBlock Text="AddEmployee" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button Grid.Column="4"
                                Command="{Binding AddEmployeeCommand}"
                                Style="{StaticResource UserControlButton}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="DeleteOutline"
                                                             Style="{StaticResource UserControlButtonIcon}" />
                                    <TextBlock Text="Remove" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button Grid.Column="5"
                                Command="{Binding AddEmployeeCommand}"
                                Style="{StaticResource UserControlButton}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Update"
                                                             Style="{StaticResource UserControlButtonIcon}" />
                                    <TextBlock Text="Update" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </Grid>
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding ActiveEmployees}"
                              AutoGenerateColumns="False"
                              Margin="10" />
                </Grid>
            </TabItem>
            <TabItem Header="Inactive employees">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0"
                          Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Style="{StaticResource SearchIcon}" />
                        <TextBox  Grid.Column="1"
                                  materialDesign:HintAssist.Hint="Pretrazi"
                                  Style="{StaticResource SearchTextBox}" />
                        <Button Grid.Column="3"
                                Command="{Binding AddEmployeeCommand}"
                                Style="{StaticResource UserControlButton}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Add"
                                                             Style="{StaticResource UserControlButtonIcon}" />
                                    <TextBlock Text="Activate" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </Grid>
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding ActiveEmployees}"
                              AutoGenerateColumns="False"
                              Margin="10" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
