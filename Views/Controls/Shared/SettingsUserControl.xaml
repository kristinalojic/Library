<UserControl x:Class="Library.Views.Controls.Shared.SettingsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Library.Views.Controls.Shared"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <TabControl materialDesign:ColorZoneAssist.Mode="SecondaryLight">
            <TabItem Header="General settings">
                <StackPanel Margin="20,20">
                    <TextBlock Text="Theme"
                               FontWeight="Bold"
                               FontSize="20"
                               Margin="0,10,0,10"
                               Foreground="{DynamicResource MaterialDesignBody}" />
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="Light"
                                     GroupName="Group1"
                                     Margin="5"
                                     IsChecked="{Binding SelectedTheme, Converter={StaticResource EqualityConverter}, ConverterParameter=Light}"
                                     Command="{Binding ChangeThemeCommand}"
                                     CommandParameter="Light"
                                     Foreground="{DynamicResource MaterialDesignBody}" />
                        <RadioButton Content="Dark"
                                     GroupName="Group1"
                                     Margin="5"
                                     IsChecked="{Binding SelectedTheme, Converter={StaticResource EqualityConverter}, ConverterParameter=Dark}"
                                     Command="{Binding ChangeThemeCommand}"
                                     CommandParameter="Dark"
                                     Foreground="{DynamicResource MaterialDesignBody}" />
                    </StackPanel>
                    <TextBlock Text="Color"
                               FontSize="18"
                               Margin="0,10,0,5"
                               Foreground="{DynamicResource MaterialDesignBody}" />
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="Purple"
                                     GroupName="Group2"
                                     Margin="5"
                                     IsChecked="{Binding SelectedColor, Converter={StaticResource EqualityConverter}, ConverterParameter=Purple}"
                                     Command="{Binding ChangeColorCommand}"
                                     CommandParameter="Purple"
                                     Foreground="{DynamicResource MaterialDesignBody}" />
                        <RadioButton Content="Green"
                                     GroupName="Group2"
                                     Margin="5"
                                     IsChecked="{Binding SelectedColor, Converter={StaticResource EqualityConverter}, ConverterParameter=Green}"
                                     Command="{Binding ChangeColorCommand}"
                                     CommandParameter="Green"
                                     Foreground="{DynamicResource MaterialDesignBody}" />
                        <RadioButton Content="Yellow"
                                     GroupName="Group2"
                                     Margin="5"
                                     IsChecked="{Binding SelectedColor, Converter={StaticResource EqualityConverter}, ConverterParameter=Yellow}"
                                     Command="{Binding ChangeColorCommand}"
                                     CommandParameter="Yellow"
                                     Foreground="{DynamicResource MaterialDesignBody}" />
                    </StackPanel>
                    <TextBlock Text="Language"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,40,0,10"
                               Foreground="{DynamicResource MaterialDesignBody}" />
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="English"
                                     GroupName="Grupa2"
                                     Margin="5"
                                     IsChecked="True"
                                     Foreground="{DynamicResource MaterialDesignBody}" />
                        <RadioButton Content="Serbian"
                                     GroupName="Grupa2"
                                     Margin="5"
                                     Foreground="{DynamicResource MaterialDesignBody}" />
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Change password">
                <Grid Margin="20,40,20,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0"
                                Grid.Column="0">
                        <TextBlock Text="Old password"
                                   Margin="0,0,0,5"
                                   Foreground="{DynamicResource MaterialDesignBody}" />
                        <PasswordBox Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                     Foreground="{DynamicResource MaterialDesignBody}"
                                 Grid.Row="1"
                                 Grid.Column="0" />
                        <TextBlock Text="New password"
                                   Margin="0,20,0,5"
                               Foreground="{DynamicResource MaterialDesignBody}" />
                        <PasswordBox Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                     Foreground="{DynamicResource MaterialDesignBody}" />
                        <TextBlock Text="Confirm new password"
                                   Margin="0,20,0,5"
                                   Foreground="{DynamicResource MaterialDesignBody}" />
                        <PasswordBox Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                     Foreground="{DynamicResource MaterialDesignBody}" />
                    </StackPanel>
                    <Grid  Grid.Row="1"
                           Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1"
                                materialDesign:ButtonAssist.CornerRadius="5"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                ToolTip="MaterialDesignRaisedButton with Round Corners"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Width="100"
                                Height="40"
                                Margin="5">
                            <TextBlock Text="Cancel" />
                        </Button>
                        <Button Grid.Column="2"
                                materialDesign:ButtonAssist.CornerRadius="5"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                ToolTip="MaterialDesignRaisedButton with Round Corners"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Width="100"
                                Height="40"
                                Margin="5">
                            <TextBlock Text="Save" />
                        </Button>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
