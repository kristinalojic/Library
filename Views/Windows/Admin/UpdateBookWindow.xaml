<Window x:Class="Library.Views.Windows.Admin.UpdateBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Library.Views.Windows.Admin"
        mc:Ignorable="d"
        Height="450"
        Width="430"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontSize="15">
    <Border Padding="10"
            Background="{DynamicResource MaterialDesignPaper}">
        <Grid Background="{DynamicResource MaterialDesignPaper}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <materialDesign:PackIcon Kind="PencilOutline"
                                     Width="24"
                                     Height="24"
                                     Margin="5,10,5,0"
                                     Grid.Row="0"
                                     VerticalAlignment="Center"
                                     Foreground="{DynamicResource MaterialDesignBody}" />
            <TextBox Grid.Row="0"
                     Grid.Column="1"
                     materialDesign:HintAssist.Hint="Title"
                     Foreground="{DynamicResource MaterialDesignBody}"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     IsReadOnly="False"
                     Text="{Binding Title, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                     Margin="0,10" />
            <materialDesign:PackIcon Kind="AccountEditOutline"
                                     Width="24"
                                     Height="24"
                                     Margin="5,10,5,0"
                                     Grid.Row="1"
                                     Foreground="{DynamicResource MaterialDesignBody}"
                                     VerticalAlignment="Center" />
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     materialDesign:HintAssist.Hint="Author"
                     Foreground="{DynamicResource MaterialDesignBody}"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     IsReadOnly="False"
                     Text="{Binding Author, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                     Margin="0,10" />
            <materialDesign:PackIcon Kind="FormatListBulletedType"
                                     Foreground="{DynamicResource MaterialDesignBody}"
                                     Width="24"
                                     Height="24"
                                     Margin="5,10,5,0"
                                     Grid.Row="2"
                                     VerticalAlignment="Center" />
            <ComboBox Grid.Row="2"
                      Grid.Column="1"
                      materialDesign:HintAssist.Hint="Genre"
                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                      Foreground="{DynamicResource MaterialDesignBody}"
                      ItemsSource="{Binding Genres, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                      SelectedValue="{Binding Genre}"
                      SelectedValuePath="Name"
                      DisplayMemberPath="Name"
                      Margin="0,10" />
            <materialDesign:PackIcon Kind="Calendar"
                                     Foreground="{DynamicResource MaterialDesignBody}"
                                     Width="24"
                                     Height="24"
                                     Margin="5,10,5,0"
                                     Grid.Row="3"
                                     VerticalAlignment="Center" />
            <TextBox Grid.Row="3"
                     Grid.Column="1"
                     materialDesign:HintAssist.Hint="Year of publication"
                     Foreground="{DynamicResource MaterialDesignBody}"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     IsReadOnly="False"
                     Text="{Binding YearOfPublication, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                     Margin="0,10" />
            <materialDesign:PackIcon Kind="ContentCopy"
                                     Foreground="{DynamicResource MaterialDesignBody}"
                                     Width="24"
                                     Height="24"
                                     Margin="5,10,5,0"
                                     Grid.Row="4"
                                     VerticalAlignment="Center" />
            <TextBox Grid.Row="4"
                     Grid.Column="1"
                     materialDesign:HintAssist.Hint="Copies"
                     Foreground="{DynamicResource MaterialDesignBody}"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     IsReadOnly="False"
                     Text="{Binding Copies, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                     Margin="0,10" />
            <Grid Grid.Row="5"
                  Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0"
                        Margin="20,40,40,0"
                        Height="40"
                        FontSize="18"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}">
                    <TextBlock Text="Cancel" />
                </Button>
                <Button Grid.Column="1"
                        Margin="0,40,60,0"
                        Height="40"
                        FontSize="18"
                        materialDesign:ButtonAssist.CornerRadius="5"
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                        Command="{Binding SubmitCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}">
                    <TextBlock Text="Submit" />
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>
