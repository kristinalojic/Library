<Window x:Class="Library.Views.Windows.Login"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Views.Windows"
        mc:Ignorable="d"
        Title="Login"
        Height="500"
        Width="700"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        FontFamily="Montserrat">
    <Window.Resources>
        <ResourceDictionary Source="/Resources/LoginDictionary.xaml" />
    </Window.Resources>
    <Border>
        <Border.Background>
            <ImageBrush ImageSource="/Images/lib.webp"
                        Stretch="UniformToFill" />
        </Border.Background>
        <Border Background="{StaticResource MySolidBrush}"
                Opacity="0.95">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Width="220"
                            Orientation="Vertical"
                            Margin="0,70,0,0"
                            Grid.Row="0">
                    <TextBlock Text="Welcome"
                               Style="{StaticResource WelcomeTextBlock}" />
                    <TextBlock Text="Sign in to continue."
                               Style="{StaticResource SignInTextBlock}"
                               Margin="0,5,0,0" />
                    <TextBox materialDesign:HintAssist.Hint="Username"
                             materialDesign:TextFieldAssist.UnderlineBrush="LightGray"
                             materialDesign:HintAssist.Foreground="LightGray"
                             Style="{StaticResource TextBoxStyle2}"
                             Foreground="LightGray"
                             Padding="0,0,0,3"
                             Margin="0,35,0,0" />
                    <PasswordBox materialDesign:HintAssist.Hint="Password"
                                 materialDesign:TextFieldAssist.UnderlineBrush="LightGray"
                                 materialDesign:PasswordBoxAssist.Password="{Binding Password1, Mode=TwoWay}"
                                 Style="{StaticResource PasswordBoxStyle2}"
                                 Margin="0,10,0,0" />
                    <TextBlock Style="{StaticResource ErrorTextBlock}"
                               Text=""
                               Margin="0,20,0,0" />
                    <Button Content="LOG IN"
                            Style="{StaticResource LoginButtonStyle}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150"
                                        Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
                <ComboBox Width="80"
                          Foreground="White"
                          Background="Transparent"
                          HorizontalAlignment="Right"
                          Margin="0,0,10,10"
                          Grid.Row="1">
                    <ComboBox.Template>
                        <ControlTemplate TargetType="ComboBox">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <materialDesign:PackIcon Kind="Globe"
                                                         Width="16"
                                                         Height="16"
                                                         HorizontalAlignment="Left"
                                                         VerticalAlignment="Center"
                                                         Margin="5,1,0,3"
                                                         Grid.Column="0" />
                                <ToggleButton Grid.Column="1"
                                              IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                              ClickMode="Press"
                                              Style="{StaticResource MaterialDesignFloatingActionButton}"
                                              Background="Transparent"
                                              Foreground="White"
                                              BorderBrush="Transparent"
                                              BorderThickness="0">
                                    <materialDesign:PackIcon Kind="MenuUp"
                                                             Width="24"
                                                             Height="24" />
                                </ToggleButton>
                                <ContentPresenter Name="ContentSite"
                                                  IsHitTestVisible="False"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                                  Margin="5,3,23,3"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  Grid.Column="1" />
                                <Popup Name="Popup"
                                       Placement="Top"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       AllowsTransparency="True"
                                       Focusable="False"
                                       PopupAnimation="Slide">
                                    <Border Background="Transparent"
                                            BorderThickness="1"
                                            BorderBrush="Gray">
                                        <ScrollViewer>
                                            <StackPanel Background="Transparent">
                                                <ItemsPresenter />
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </ControlTemplate>
                    </ComboBox.Template>
                    <ComboBoxItem Content="EN"
                                  IsSelected="True" />
                    <ComboBoxItem Content="SR" />
                </ComboBox>
            </Grid>
        </Border>
    </Border>
</Window>