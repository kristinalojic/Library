<Window x:Class="Library.Views.Windows.Employee.MemberDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.Views.Windows.Employee"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        d:DesignHeight="510"
        d:DesignWidth="800">
    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <TabControl materialDesign:ColorZoneAssist.Mode="SecondaryLight">
            <TabItem Header="Loans">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0"
                          Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Style="{StaticResource SearchIcon}" />
                        <TextBox  Grid.Column="1"
                                  materialDesign:HintAssist.Hint="Pretrazi"
                                  Style="{StaticResource SearchTextBox}" />
                        <Button Grid.Column="3"
                                Command="{Binding AddEmployeeCommand}"
                                Style="{StaticResource UserControlButton}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="CheckAll"
                                                             Style="{StaticResource UserControlButtonIcon}" />
                                    <TextBlock Text="Chech in" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                        <Button Grid.Column="4"
                                Command="{Binding AddEmployeeCommand}"
                                Style="{StaticResource UserControlButton}">
                            <Button.Content>
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <materialDesign:PackIcon Kind="CalendarOutline"
                                                             Style="{StaticResource UserControlButtonIcon}" />
                                    <TextBlock Text="Extend" />
                                </StackPanel>
                            </Button.Content>
                        </Button>
                    </Grid>
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding ActiveEmployees}"
                              AutoGenerateColumns="False"
                              Margin="10" />
                </Grid>
            </TabItem>
            <TabItem Header="Loan history"
                     Background="{DynamicResource MaterialDesignPaper}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0"
                          Margin="0,27,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <materialDesign:PackIcon Style="{StaticResource SearchIcon}" />
                        <TextBox  Grid.Column="1"
                                  materialDesign:HintAssist.Hint="Pretrazi"
                                  Style="{StaticResource SearchTextBox}" />
                    </Grid>
                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding ActiveEmployees}"
                              AutoGenerateColumns="False"
                              Margin="10" />
                </Grid>
            </TabItem>
            <TabItem Header="Update">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="8*" />
                        <ColumnDefinition Width="10*" />
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon Kind="AccountCircleOutline"
                                             Width="24"
                                             Height="24"
                                             Margin="0,20,0,0"
                                             Grid.Row="0"
                                             Foreground="{DynamicResource MaterialDesignBody}"
                                             HorizontalAlignment="Center" />
                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             materialDesign:HintAssist.Hint="Name"
                             Foreground="{DynamicResource MaterialDesignBody}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             IsReadOnly="False"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,10,0,10" />
                    <materialDesign:PackIcon Kind="AccountCircleOutline"
                                             Width="24"
                                             Height="24"
                                             Margin="0,19,0,0"
                                             Grid.Row="1"
                                             Foreground="{DynamicResource MaterialDesignBody}"
                                             HorizontalAlignment="Center" />
                    <TextBox Grid.Row="1"
                             Grid.Column="1"
                             materialDesign:HintAssist.Hint="Surname"
                             Foreground="{DynamicResource MaterialDesignBody}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             IsReadOnly="False"
                             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,10,0,10" />
                    <materialDesign:PackIcon Kind="PhoneOutline"
                                             Foreground="{DynamicResource MaterialDesignBody}"
                                             Width="24"
                                             Height="24"
                                             Margin="0,20,0,0"
                                             Grid.Row="2"
                                             HorizontalAlignment="Center" />
                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             materialDesign:HintAssist.Hint="Phone"
                             Foreground="{DynamicResource MaterialDesignBody}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             IsReadOnly="False"
                             Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,10,0,10" />
                    <materialDesign:PackIcon Kind="MailOutline"
                                             Foreground="{DynamicResource MaterialDesignBody}"
                                             Width="24"
                                             Height="24"
                                             Margin="0,19,0,0"
                                             Grid.Row="3"
                                             HorizontalAlignment="Center" />
                    <TextBox Grid.Row="3"
                             Grid.Column="1"
                             materialDesign:HintAssist.Hint="Email"
                             Foreground="{DynamicResource MaterialDesignBody}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             IsReadOnly="False"
                             Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,10,0,10" />
                    <materialDesign:PackIcon Kind="AddressMarkerOutline"
                                             Foreground="{DynamicResource MaterialDesignBody}"
                                             Width="24"
                                             Height="24"
                                             Margin="0,20,0,0"
                                             Grid.Row="4"
                                             HorizontalAlignment="Center" />
                    <TextBox x:Name="AddressTextBox"
                             Grid.Row="4"
                             Grid.Column="1"
                             materialDesign:HintAssist.Hint="Address"
                             Foreground="{DynamicResource MaterialDesignBody}"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             IsReadOnly="False"
                             Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,10,0,10" />
                    <materialDesign:PackIcon Grid.Row="5"
                                             Kind="CalendarOutline"
                                             Foreground="{DynamicResource MaterialDesignBody}"
                                             Width="24"
                                             Height="24"
                                             Margin="0,20,0,0"
                                             HorizontalAlignment="Center" />
                    <Grid Grid.Row="5"
                          Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Membership due date: 13.07.2025"
                                   FontFamily="MaterialDesignFont"
                                   Margin="0,25,5,0"
                                   Foreground="{DynamicResource MaterialDesignBody}" />
                        <Button Grid.Column="1"
                                HorizontalAlignment="Right"
                                Margin="0,8,0,0"
                            IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                Style="{StaticResource MaterialDesignIconButton}"
                                ToolTip="Renew membership">
                            <materialDesign:PackIcon Kind="AddBold" />
                        </Button>
                    </Grid>
                    <Grid Grid.Row="6"
                          Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1"
                                Margin="40,70,20,20"
                                Height="40"
                                FontSize="18"
                                materialDesign:ButtonAssist.CornerRadius="5"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                Style="{StaticResource MaterialDesignRaisedButton}">
                            <TextBlock Text="Cancel" />
                        </Button>
                        <Button Grid.Column="2"
                                Margin="0,70,20,20"
                                Height="40"
                                FontSize="18"
                                materialDesign:ButtonAssist.CornerRadius="5"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                Style="{StaticResource MaterialDesignRaisedButton}">
                            <TextBlock Text="Submit" />
                        </Button>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
