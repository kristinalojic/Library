<Window x:Class="Library.Views.Windows.Employee.LoansWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Library.Views.Windows.Employee"
        xmlns:helpers="clr-namespace:Library.Helpers"
        mc:Ignorable="d"
        Height="550"
        Width="800"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        FontSize="15">
    <Window.Resources>
        <helpers:BoolToYesNoConverter x:Key="BoolToYesNoConverter" />
    </Window.Resources>
    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <TabControl materialDesign:ColorZoneAssist.Mode="SecondaryLight">
            <TabItem Header="{DynamicResource Active}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0"
                          Margin="0,10,0,0"
                          Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                    <Grid Grid.Row="1"
                          Margin="0,20,0,0">
                        <ContentControl>
                            <ContentControl.Style>
                                <Style TargetType="ContentControl">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <DataGrid ItemsSource="{Binding ActiveLoans}"
                                                      AutoGenerateColumns="False"
                                                      CanUserAddRows="False"
                                                      CanUserDeleteRows="False"
                                                      VerticalScrollBarVisibility="Auto"
                                                      HorizontalScrollBarVisibility="Auto"
                                                      FontSize="14">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="{DynamicResource Member}"
                                                                        Width="2*"
                                                                        Binding="{Binding FullName}"
                                                                        IsReadOnly="True" />
                                                    <DataGridTextColumn Header="{DynamicResource IssueDate}"
                                                                        Width="2*"
                                                                        Binding="{Binding IssueDate, StringFormat={}{0:d.M.yyyy.}}"
                                                                        IsReadOnly="True" />
                                                    <DataGridTextColumn Header="{DynamicResource DueDate}"
                                                                        Width="2*"
                                                                        Binding="{Binding DueDate, StringFormat={}{0:d.M.yyyy.}}"
                                                                        IsReadOnly="True" />
                                                    <DataGridTextColumn Header="{DynamicResource Extended}"
                                                                        Width="*"
                                                                        Binding="{Binding HasBeenExtended, Converter={StaticResource BoolToYesNoConverter}}"
                                                                        IsReadOnly="True" />
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ActiveLoansCount}"
                                                     Value="0">
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <TextBlock Text="{DynamicResource NoData}"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               FontSize="26"
                                                               Foreground="{DynamicResource MaterialDesignBody}" />
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="{DynamicResource History}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0"
                          Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                    </Grid>
                    <Grid Grid.Row="1"
                          Margin="0,20,0,0">
                        <ContentControl>
                            <ContentControl.Style>
                                <Style TargetType="ContentControl">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <DataGrid ItemsSource="{Binding ReturnedLoans}"
                                                      AutoGenerateColumns="False"
                                                      CanUserAddRows="False"
                                                      CanUserDeleteRows="False"
                                                      VerticalScrollBarVisibility="Auto"
                                                      HorizontalScrollBarVisibility="Auto"
                                                      FontSize="14">
                                                <DataGrid.Columns>
                                                    <DataGridTextColumn Header="{DynamicResource Member}"
                                                                        Width="2*"
                                                                        Binding="{Binding FullName}"
                                                                        IsReadOnly="True" />
                                                    <DataGridTextColumn Header="{DynamicResource IssueDate}"
                                                                        Width="2*"
                                                                        Binding="{Binding IssueDate, StringFormat={}{0:d.M.yyyy.}}"
                                                                        IsReadOnly="True" />
                                                    <DataGridTextColumn Header="{DynamicResource DueDate}"
                                                                        Width="2*"
                                                                        Binding="{Binding DueDate, StringFormat={}{0:d.M.yyyy.}}"
                                                                        IsReadOnly="True" />
                                                </DataGrid.Columns>
                                            </DataGrid>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ReturnedLoansCount}"
                                                     Value="0">
                                            <Setter Property="Content">
                                                <Setter.Value>
                                                    <TextBlock Text="{DynamicResource NoData}"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"
                                                               FontSize="26"
                                                               Foreground="{DynamicResource MaterialDesignBody}" />
                                                </Setter.Value>
                                            </Setter>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
